<div class="row">
    <div class="col">
        <div class="awards">
            <div class="score">
                <div class="icon">
                    <img class="evocoin black" src="{{{config.wwwroot}}}/blocks/game/pix/evocoin.svg" alt="Evocoin">
                </div>
                <div class="points">{{{score}}}</div>
            </div>
        </div>
    </div>
    <div class="col text-right">
        <div class="userinfo">
            <div class="username">
                {{{userfirstname}}}
            </div>
            <div class="userpicture">
                <img src="{{{userpicture}}}" alt="{{{userfirstname}}}" class="img-fluid">
            </div>
        </div>
    </div>
</div>

<div class="mt-4 row">
    <div class="col">
        <a href="{{{config.wwwroot}}}/course/view.php?id={{{courseid}}}" class="btn btn-primary">Back to mission</a>
        <a href="{{{config.wwwroot}}}/blocks/game/rank_game.php?id={{{courseid}}}" class="btn btn-primary ml-4">To the leaderboard</a>
    </div>
</div>

{{#hasbadges}}
<div class="row mt-4">
    <div class="col">
        <table id="superpowerstable" class="table">
            <thead>
                <tr>
                    <th scope="col" colspan="2">
                        <h2>My Superpowers</h2>
                    </th>
                </tr>
            </thead>
            <tbody>
            {{#badges}}
                {{#awarded}}
                    <tr>
                        <td class="badge-image-column">
                            <img src="{{{badgeimage}}}" alt="{{{name}}}" class="evokebadge">
                        </td>
                        <td>
                            <h3>{{{name}}}</h3>
                            <p>{{{description}}}</p>
                        </td>
                    </tr>
                {{/awarded}}
            {{/badges}}
            </tbody>
        </table>
    </div>
</div>
{{/hasbadges}}