<div class="row">
    <div class="col">
        <div class="awards">
            <div class="score">
                <div class="icon">
                    <img class="evocoin black" src="{{{config.wwwroot}}}/blocks/game/pix/evocoin.svg" alt="Evocoin">
                </div>
                <div class="points">{{{score}}}</div>
            </div>
            {{#hasbadges}}
                <div class="badges">
                    {{#badges}}
                        <img src="{{{badgeimage}}}" alt="{{{name}}}" class="evokebadge {{^awarded}}dimmed{{/awarded}}">
                    {{/badges}}
                </div>
            {{/hasbadges}}
        </div>
        <a href="{{{config.wwwroot}}}/blocks/game/rank_game.php?id={{{courseid}}}" class="btn btn-primary ml-4">View score board</a>
    </div>
    <div class="col text-right">
        <div class="userinfo">
            <div class="username">
                {{{userfirstname}}}
            </div>
            <div class="userpicture">
                {{{userpicture}}}
            </div>
        </div>
    </div>
</div>